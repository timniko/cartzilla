<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Template isFullResponsive="true">
    <Name>cartzilla</Name>
    <Author>Tim Niko Tegtmeyer</Author>
    <URL>https://tnt-ai.com</URL>
    <Preview>preview.png</Preview>
    <Version>1.0.3</Version>
    <MinShopVersion>5.0.0</MinShopVersion>
    <MaxShopVersion>5.2.0</MaxShopVersion>
	<Framework>Bootstrap5</Framework>
    <Description>CartZilla Template für JTL Shop5.</Description>
    <Settings>
        <Section Name="Allgemein" Key="general">
            <Setting Description="Komprimierung von JavaScript- und CSS-Dateien" Key="use_minify" Type="select" Value="N">
                <Option Value="Y">Ja</Option>
                <Option Value="static">Ja, statisch</Option>
                <Option Value="N">Nein</Option>
            </Setting>
            <Setting Description="Ist Nova Template" Key="is_nova" Type="text" Value="Y" Editable="false"/>
						<Setting Description="Support Telefonnumer Top Bar oben links" Key="cz_support_topBar" Type="text" Value="(00) 33 169 7720"/>
						<Setting Description="Musterbewertung anzeigen wenn noch keine Artikelbewertungen vorhanden sind?" Key="reviews_muster" Type="select" Value="Y">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
						<Setting Description="Beweruntgsformular immer anzeigen?" Key="reviews_form_always" Type="select" Value="Y">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
						<Setting Description="Icons bei den Artikeldetails anzeigen" Key="show_detail_icons" Type="select" Value="N">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
        </Section>
        <Section Name="Theme" Key="theme">
            <Setting Description="Theme" Key="theme_default" Type="select" Value="cartzilla">
                <Option Value="cartzilla">CartZilla basiert auf dem JTL NOVA-Theme!</Option>
            </Setting>
            <Setting Description="Wunschzettel und Vergleichsliste - Animation anzeigen" Key="wish_compare_animation" Type="select" Value="mobile">
                <Option Value="both">Auf Desktop und mobilen Geräten</Option>
                <Option Value="mobile">Nur mobil</Option>
                <Option Value="desktop">Nur Desktop</Option>
                <Option Value="none">Keine</Option>
            </Setting>
            <Setting Description="Favicon" Key="favicon" Type="upload" Value="favicon.ico" maxFileSize="123456" showPreview="false" allowedFileExtensions="['ico','png']" accept="image/*" target="themes/base/images/" targetFileName="favicon.ico"/>
        </Section>
        <Section Name="Megamenu" Key="megamenu">
            <Setting Description="Kategorien anzeigen" Key="show_categories" Type="select" Value="Y">
                <Option Value="Y">Auf Desktop und mobilen Geräten</Option>
                <Option Value="mobile">Nur mobil</Option>
                <Option Value="desktop">Nur Desktop</Option>
                <Option Value="N">Inaktiv</Option>
            </Setting>
            <Setting Description="Kategoriebilder für erste Unterkategorie" Key="show_category_images" Type="select" Value="N">
                <Option Value="Y">Aktiv</Option>
                <Option Value="N">Inaktiv</Option>
            </Setting>
            <Setting Description="Unterkategorien" Key="show_subcategories" Type="select" Value="Y">
                <Option Value="Y">Aktiv</Option>
                <Option Value="N">Inaktiv</Option>
            </Setting>
            <Setting Description="Seiten der Linkgruppe _megamenu_" Key="show_pages" Type="select" Value="Y">
                <Option Value="Y">Aktiv</Option>
                <Option Value="N">Inaktiv</Option>
            </Setting>
        </Section>
        <Section Name="Listen- und Gallerieansicht" Key="productlist">
						<Setting Description="Sortierung anzeigen" Key="show_product_sorting" Type="select" Value="Y">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
						<Setting Description="Preisspanne als Filter anzeigen" Key="show_pricerange_filter" Type="select" Value="Y">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
						<Setting Description="Hersteller als Filter anzeigen" Key="show_manufacturer_filter" Type="select" Value="Y">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
						<Setting Description="Verfügbarkeit als Filter anzeigen" Key="show_availability_filter" Type="select" Value="Y">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
						<Setting Description="Merkmale als Filter anzeigen" Key="show_characteristics_filter" Type="select" Value="Y">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
            <Setting Description="Preisspanne immer anzeigen (empfohlen)" Key="always_show_price_range" Type="select" Value="Y" Editable="false">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
        </Section>
        <Section Name="Footer-Einstellungen" Key="footer">
            <Setting Description="Newsletter-Anmeldung im Footer" Key="newsletter_footer" Type="select" Value="N">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
            <Setting Description="Social-Media-Schaltflächen im Footer" Key="socialmedia_footer" Type="select" Value="N">
                <Option Value="Y">Ja</Option>
                <Option Value="N">Nein</Option>
            </Setting>
            <Setting Description="Facebook-Link" Key="facebook" Type="text" Value=""/>
            <Setting Description="Twitter-Link" Key="twitter" Type="text" Value=""/>
            <Setting Description="YouTube-Link" Key="youtube" Type="text" Value=""/>
            <Setting Description="Xing-Link" Key="xing" Type="text" Value=""/>
            <Setting Description="LinkedIn-Link" Key="linkedin" Type="text" Value=""/>
            <Setting Description="Vimeo-Link" Key="vimeo" Type="text" Value=""/>
            <Setting Description="Instagram-Link" Key="instagram" Type="text" Value=""/>
            <Setting Description="Pinterest-Link" Key="pinterest" Type="text" Value=""/>
            <Setting Description="Skype-Link" Key="skype" Type="text" Value=""/>
						<Setting Description="WhatsApp-Link" Key="whatsapp" Type="text" Value=""/>
						<Setting Description="Zahlungsmöglichkeiten" Key="zahlungsmethoden_bild" Type="upload" Value="cards-alt.png" maxFileSize="6144" showPreview="true" allowedFileExtensions="['jpg','png']" accept="image/*" target="img/" targetFileName="cards-alt.png"/>
						<Setting Description="Footer Logo" Key="footer_logo" Type="upload" Value="footer-logo-light.png" maxFileSize="6144" showPreview="true" allowedFileExtensions="['jpg','png']" accept="image/*" target="img/" targetFileName="footer-logo-light.png"/>
        </Section>
    </Settings>
    <Minify>
        <CSS Name="cartzilla.css">
						<File Path="vendor/simplebar/dist/simplebar.min.css"/>
						<File Path="vendor/tiny-slider/dist/tiny-slider.css"/>
						<File Path="vendor/nouislider/dist/nouislider.min.css"/>
						<File Path="vendor/lightgallery.js/dist/css/lightgallery.min.css"/>
						<File Path="themes/cartzilla/bootstrap-select/bootstrap-select.min.css"/>
						<File Path="css/theme.min.css"/>
            <File Path="themes/cartzilla/custom.css"/>
        </CSS>
				<!--<JS Name="jtl3.js">
						<File Path="js/bootstrap.bundle.min.js"/>
						<File Path="js/nouislider.min.js"/>
						<File Path="js/bootstrap-select.min.js"/>
        </JS>-->
				<JS Name="jtl3.js">
            <File Path="js/bootstrap-toolkit.js"/>
            <File Path="js/popper.min.js"/>
            <File Path="js/bootstrap.bundle.min.js"/>
            <File Path="js/slick.min.js"/>
            <File Path="js/eModal.min.js"/>
            <File Path="js/jquery.nivo.slider.pack.js"/>
            <File Path="js/bootstrap-select.min.js"/>
            <File Path="js/jtl.evo.js"/>
            <File Path="js/typeahead.bundle.js"/>
            <File Path="js/wow.min.js"/>
            <File Path="js/colcade.js"/>
            <File Path="js/global.js"/>
            <File Path="js/slick-lightbox.min.js"/>
            <File Path="js/jquery.serialize-object.min.js"/>
            <File Path="js/jtl.io.js"/>
            <File Path="js/jtl.article.js"/>
            <File Path="js/jtl.basket.js"/>
            <File Path="js/parallax.min.js"/>
            <File Path="js/jqcloud.js"/>
            <File Path="js/nouislider.min.js"/>
            <File Path="js/consent.js"/>
            <File Path="js/consent.youtube.js"/>
        </JS>
    </Minify>
    <Boxes>
        <Container Position="left" Available="0" />
        <Container Position="right" Available="0" />
        <Container Position="top" Available="0" />
        <Container Position="bottom" Available="0" />
    </Boxes>
</Template>
